import SwiftUI

struct LoginView: View {
    
    @EnvironmentObject var theme: ThemeManager
    
    @State private var email = ""
    @State private var password = ""
    
    // Navigation trigger
    @State private var goToApp = false
    
    var body: some View {
        
        ZStack {
            theme.background.ignoresSafeArea()
            
            VStack(spacing: 35) {
                
                // MARK: - App Title
                VStack(spacing: 6) {
                    Text("CampusVerse")
                        .font(.system(size: 38, weight: .bold))
                        .foregroundColor(theme.textPrimary)
                    
                    Text("Your campus in one place")
                        .font(.subheadline)
                        .foregroundColor(theme.textSecondary)
                }
                .padding(.top, 40)
                
                
                // MARK: - Input Fields
                VStack(spacing: 20) {
                    
                    // EMAIL FIELD
                    HStack {
                        Image(systemName: "envelope.fill")
                            .foregroundColor(theme.textSecondary)
                        
                        TextField("Email", text: $email)
                            .foregroundColor(theme.textPrimary)
                            .autocapitalization(.none)
                    }
                    .padding()
                    .background(theme.cardBackground)
                    .clipShape(RoundedRectangle(cornerRadius: 14))
                    
                    
                    // PASSWORD FIELD
                    HStack {
                        Image(systemName: "lock.fill")
                            .foregroundColor(theme.textSecondary)
                        
                        SecureField("Password", text: $password)
                            .foregroundColor(theme.textPrimary)
                    }
                    .padding()
                    .background(theme.cardBackground)
                    .clipShape(RoundedRectangle(cornerRadius: 14))
                }
                .padding(.horizontal)
                
                
                // MARK: - Login Button
                Button(action: {
                    goToApp = true   // navigate
                }) {
                    Text("Log In")
                        .font(.headline)
                        .frame(maxWidth: .infinity)
                        .padding(.vertical, 14)
                        .background(theme.chipSelectedBG)
                        .foregroundColor(theme.chipSelectedText)
                        .clipShape(RoundedRectangle(cornerRadius: 14))
                        .shadow(color: theme.isDark ? .clear : .black.opacity(0.15),
                                radius: 5, y: 3)
                }
                .padding(.horizontal)
                
                
                // MARK: - Guest Mode
                Button(action: {
                    goToApp = true    // navigate
                }) {
                    Text("Continue as Guest")
                        .foregroundColor(theme.textSecondary)
                        .font(.subheadline)
                }
                
                Spacer()
            }
        }
        .navigationDestination(isPresented: $goToApp) {
            MainTabView()
                .environmentObject(theme)
        }
    }
}
