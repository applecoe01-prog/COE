import SwiftUI

struct OrderSummaryView: View {
    
    @ObservedObject var vm: CafeteriaViewModel
    @EnvironmentObject var theme: ThemeManager
    
    var body: some View {
        ZStack {
            theme.background.ignoresSafeArea()
            
            VStack(alignment: .leading, spacing: 20) {
                
                // Title
                Text("Order Summary")
                    .font(.largeTitle.bold())
                    .foregroundColor(theme.textPrimary)
                
                // Cart Items
                if vm.cart.isEmpty {
                    Text("Your cart is empty.")
                        .foregroundColor(theme.textSecondary)
                        .font(.headline)
                    Spacer()
                } else {
                    ForEach(vm.cart) { item in
                        HStack {
                            Text(item.itemName)
                                .foregroundColor(theme.textPrimary)
                            
                            Spacer()
                            
                            Text("₹\(Int(item.price))")
                                .foregroundColor(theme.textPrimary)
                        }
                        .padding(.vertical, 4)
                    }
                    
                    Divider()
                    
                    // Total Amount
                    Text("Total: ₹\(Int(vm.totalAmount))")
                        .font(.headline)
                        .foregroundColor(theme.textPrimary)
                    
                    // Place Order Button
                    Button(action: {
                        vm.placeOrder()
                    }) {
                        Text("Place Order")
                            .frame(maxWidth: .infinity)
                            .padding()
                            .background(theme.cardBackground)
                            .foregroundColor(theme.textPrimary)
                            .clipShape(RoundedRectangle(cornerRadius: 16))
                    }
                    .padding(.top, 10)
                    
                    // Pay Button (Visible after placing order)
                    if vm.isOrderPlaced {
                        Button(action: {
                            vm.payNow()
                        }) {
                            Text("Pay Now")
                                .frame(maxWidth: .infinity)
                                .padding()
                                .background(theme.chipSelectedBG)
                                .foregroundColor(theme.chipSelectedText)
                                .clipShape(RoundedRectangle(cornerRadius: 16))
                        }
                        .padding(.top, 5)
                    }
                    
                    // Slip Generator (Visible after payment)
                    if vm.isPaid {
                        NavigationLink(destination: PaymentSlipView(vm: vm)) {
                            Text("Generate Slip")
                                .frame(maxWidth: .infinity)
                                .padding()
                                .background(theme.cardBackground)
                                .foregroundColor(theme.textPrimary)
                                .clipShape(RoundedRectangle(cornerRadius: 16))
                        }
                        .padding(.top, 5)
                    }
                }
                
                Spacer()
            }
            .padding()
        }
    }
}
